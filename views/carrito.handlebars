<div class="row  justify-content-center padding">
    <div
      class="
        shadow-lg       
        mb-5
        bg-light
        rounded
        col-sm-7
        justify-content-center
        aling-items-center
        p-5
        d-flex
        flex-column
        border border-info
        text-center
      "
    >
      <h1>{{titulo}}</h1>
    <table class="table">
        <thead>
          <tr>      
           <th scope="col">Marca</th>
           <th scope="col">Modelo</th>
           <th scope="col">precio</th>
          </tr>
        </thead>
      <tbody>
      {{#each datos}}   
         <tr>     
          <td>{{this.model}}</td>
          <td>{{this.detalles}}</td>
          <td>${{number this.precio}}</td>
         </tr>    
       {{/each}}
      </tbody>
       <thead>
          <tr>      
           <th scope="col"></th>
           <th scope="col">Total:</th>
           <th scope="col">${{number total}}</th>
          </tr>
        </thead>       
   </table>
<a class="btn btn-outline-primary mb-2"  href="/home/buy">Finalizar compra</a>
<a class="btn btn-outline-danger"  href="/home/deleteAll">Borrar carrito</a>
    </div>
    
  </div>